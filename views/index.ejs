<% include partials/header %>

<div class="ui container">
  <h1>Index Page!</h1>

  <% blogs.forEach(blog => { %>
    <div>
      <h1><%= blog.title %></h1>
      <img src="<%= blog.image %>" alt="">
      <span><%= blog.created %></span>
      <p><%= blog.body.substring(0, 100) %>...</p>
      <a href="/blogs/<%= blog._id %>">Read More</a>
    </div>
  <% }) %>
</div>



<% include partials/footer %>